<style>
	.logo-link {
		display: block;
		width: 115px;
		height: 35px;
		user-select: none;
	}

	.logo-svg {
		width: 100%;
		height: 100%;
	}

	.logo-path {
		stroke: #1a1a1a;
		fill: none;
		stroke-dasharray: 900;
		stroke-dashoffset: 900;
		animation: draw 2s cubic-bezier(0.4, 0, 0.2, 1) forwards;
	}

	.logo-path-cross {
		stroke: #1a1a1a;
		fill: none;
		stroke-dasharray: 15;
		stroke-dashoffset: 15;
		animation: draw 0.2s ease-out 2s forwards;
	}

	@keyframes draw {
		to {
			stroke-dashoffset: 0;
		}
	}

	/* ダークモード対応 */
	:global(.dark) .logo-path,
	:global(.dark) .logo-path-cross {
		stroke: #f5f5f5;
	}

	/* アクセシビリティ: モーション軽減設定 */
	@media (prefers-reduced-motion: reduce) {
		.logo-path,
		.logo-path-cross {
			animation: none;
			stroke-dasharray: none;
			stroke-dashoffset: 0;
		}
	}

	/* 印刷時はアニメーション無効 */
	@media print {
		.logo-path,
		.logo-path-cross {
			animation: none;
			stroke-dasharray: none;
			stroke-dashoffset: 0;
		}
	}

	/* ホバーエフェクト */
	.logo-link:hover .logo-path,
	.logo-link:hover .logo-path-cross {
		stroke: #555;
		transition: stroke 0.3s ease;
	}

	:global(.dark) .logo-link:hover .logo-path,
	:global(.dark) .logo-link:hover .logo-path-cross {
		stroke: #bbb;
	}
</style>
