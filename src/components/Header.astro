---
// ヘッダーコンポーネント
import Logo from "./Logo.astro";

const navLinks = [
	{ href: "/about", text: "About" },
	{ href: "/works", text: "Works" },
	{ href: "/bookshelf", text: "Bookshelf" },
	{ href: "/blog", text: "Blog" },
	{ href: "/talks", text: "Talks" },
	{ href: "/slides", text: "Slides" },
	{ href: "/links", text: "Links" },
	{ href: "/tools", text: "Tools" },
];
---

<header class="sticky top-0 z-50 border-b border-gray-200 bg-white/80 backdrop-blur-sm">
	<nav class="mx-auto flex max-w-7xl items-center justify-between px-6 py-4" aria-label="メインナビゲーション">
		<Logo />
		<ul class="flex gap-6">
			{navLinks.map((link) => (
				<li>
					<a href={link.href} class="hover:opacity-70">
						{link.text}
					</a>
				</li>
			))}
		</ul>
	</nav>
</header>
