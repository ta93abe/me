<div class="grid grid-cols-2 gap-3 sm:grid-cols-3 md:grid-cols-4">
	{
		snsLinks.map((link) => (
			<a
				href={link.url}
				target="_blank"
				rel="noopener noreferrer"
				class={`flex items-center gap-3 rounded-lg border border-gray-200 bg-white px-4 py-3 transition-all hover:shadow-md ${link.hoverBg}`}
				aria-label={link.name}
			>
				<svg
					viewBox={link.viewBox || "0 0 24 24"}
					class="h-5 w-5 flex-shrink-0"
					aria-hidden="true"
				>
					{link.gradient && (
						<defs>
							{link.gradient.type === "radial" ? (
								<radialGradient
									id={link.gradient.id}
									cx="30%"
									cy="107%"
									r="150%"
								>
									{link.gradient.stops.map((stop) => (
										<stop offset={stop.offset} stop-color={stop.color} />
									))}
								</radialGradient>
							) : (
								<linearGradient id={link.gradient.id}>
									{link.gradient.stops.map((stop) => (
										<stop offset={stop.offset} stop-color={stop.color} />
									))}
								</linearGradient>
							)}
						</defs>
					)}
					{Array.isArray(link.icon) ? (
						link.icon.map((p, i) => (
							<path
								d={p.path}
								fill={p.color}
								transform={
									link.name === "TikTok"
										? i === 0
											? "translate(0.5, 0.3)"
											: i === 1
												? "translate(-0.5, -0.3)"
												: undefined
										: undefined
								}
							/>
						))
					) : link.gradient ? (
						<path d={link.icon} fill={`url(#${link.gradient.id})`} />
					) : (
						<path d={link.icon} fill={link.color} />
					)}
				</svg>
				<span class="text-sm font-medium">{link.name}</span>
			</a>
		))
	}
</div>
