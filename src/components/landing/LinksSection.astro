<section id="links" class="links-section">
	<div class="links-container">
		<div class="links-header" data-animate="fade-up">
			<span class="section-label">Explore</span>
			<h2 class="section-title">Navigate</h2>
		</div>

		<div class="links-grid" data-animate="stagger">
			{
				links.map((link) => (
					<a href={link.href} class="link-card">
						<div class="link-icon">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke="currentColor"
								stroke-width="1.5"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d={link.icon}
								/>
							</svg>
						</div>
						<div class="link-content">
							<h3 class="link-title">{link.title}</h3>
							<p class="link-description">{link.description}</p>
						</div>
						<div class="link-arrow">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke="currentColor"
								stroke-width="2"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M17 8l4 4m0 0l-4 4m4-4H3"
								/>
							</svg>
						</div>
					</a>
				))
			}
		</div>
	</div>
</section>

<style>
	.links-section {
		padding: 8rem 2rem;
		background: #fafafa;
	}

	.links-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.links-header {
		margin-bottom: 4rem;
	}

	.section-label {
		display: block;
		font-size: 0.875rem;
		letter-spacing: 0.3em;
		text-transform: uppercase;
		color: #888;
		margin-bottom: 0.5rem;
	}

	.section-title {
		font-size: clamp(2.5rem, 8vw, 5rem);
		font-weight: 700;
		margin: 0;
		line-height: 1.1;
		color: #1a1a1a;
	}

	.links-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: 1.5rem;
	}

	.link-card {
		display: flex;
		align-items: center;
		gap: 1.5rem;
		padding: 2rem;
		background: #fff;
		border-radius: 1rem;
		text-decoration: none;
		color: inherit;
		border: 1px solid #eee;
		transition: all 0.3s ease;
	}

	.link-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
		border-color: #ddd;
	}

	.link-card:hover .link-arrow {
		transform: translateX(4px);
		opacity: 1;
	}

	.link-icon {
		flex-shrink: 0;
		width: 48px;
		height: 48px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: #f5f5f5;
		border-radius: 12px;
	}

	.link-icon svg {
		width: 24px;
		height: 24px;
		color: #1a1a1a;
	}

	.link-content {
		flex: 1;
	}

	.link-title {
		font-size: 1.25rem;
		font-weight: 600;
		margin: 0 0 0.25rem;
		color: #1a1a1a;
	}

	.link-description {
		font-size: 0.875rem;
		color: #666;
		margin: 0;
	}

	.link-arrow {
		flex-shrink: 0;
		opacity: 0;
		transition: all 0.3s ease;
	}

	.link-arrow svg {
		width: 20px;
		height: 20px;
		color: #1a1a1a;
	}

	@media (max-width: 768px) {
		.links-section {
			padding: 6rem 1.5rem;
		}

		.links-grid {
			grid-template-columns: 1fr;
		}

		.link-card {
			padding: 1.5rem;
		}

		.link-arrow {
			opacity: 0.5;
		}
	}
</style>
